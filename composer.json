{
    "name" : "genkgo/push",
    "description": "Send push messages to Android, Apple and Windows using one interface. Bonus: generate Apple push certificates automatically",
    "require" : {
        "php" : "^7.1",
        "ext-json" : "*",
        "jildertmiedema/windows-phone-push": "~0.0.1",
        "php-gcm/php-gcm": "~1.1.1",
        "apple/apn-push": "~2.2.2"
    },
    "suggest": {
        "guzzlehttp/guzzle": "Guzzle is required to create APN certificates (Apple)"
    },
    "require-dev" : {
        "ext-openssl" : "*",
        "ext-iconv" : "*",
        "phpunit/phpunit": "^6.0",
        "phpstan/phpstan": "^0.9",
        "phpstan/phpstan-phpunit": "^0.9",
        "friendsofphp/php-cs-fixer": "^2.9",
        "guzzlehttp/guzzle": "^6.0"
    },
    "autoload" : {
        "psr-4" : {
            "Genkgo\\Push\\" : ["src"]
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "Genkgo\\Push\\" : ["test"]
        }
    }
}